@model IEnumerable<InvoiceManagementSystem.Models.Message>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container text-center">
    <div class="row">
        <h1>Gelen Kutusu</h1>
    </div>
    <div class="row">
        <h2>Yönetici tarafından gönderilen mesajları burada görebilirsiniz.</h2>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Gönderen
                    </th>
                    <th>
                        Konu
                    </th>
                    <th>
                        Mesaj
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                             <tr>
                                 <td>
                                    @ViewData["sender"]
                                 </td>
                                 <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                                 </td>
                                 <td>
                            @Html.DisplayTextFor(modelItem => item.MessageDetails)
                                 </td>
                             </tr>
                }
            </tbody>
        </table>
    </div>
</div>

